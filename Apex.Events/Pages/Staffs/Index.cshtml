@page
@model Apex.Events.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="center-container">
    <h1><b>Staff List</b></h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Staff[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staff[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staff[0].Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Staff)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.EventStaffId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.EventStaffId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.EventStaffId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

