@page
@model Apex.Events.Pages.Staffs.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="center-container">
    <h1><b>Staff - Details</b></h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Role)
        </dd>
    </dl>

    @* Upcoming Event Assignments Section *@
    <h4><b>Upcoming Event Assignments (@Model.UpcomingAssignments.Count)</b></h4>
    @if (Model.UpcomingAssignments.Count > 0)
    {
        <ul>
            @foreach (var assignment in Model.UpcomingAssignments)
            {
                <li>
                    @($"Event: {assignment.Event?.EventName}")
                    <br />
                    @($"Date: {assignment.Event?.EventDate}")
                    <br />
                    @($"Type: {assignment.Event?.EventType}")
                    <br />
                    @($"Assignment: {assignment.StaffingName}")
                </li>
            }
        </ul>
    }
    else
    {
        <p>No upcoming event assignments for this staff member.</p>
    }
    <hr />

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Staff.EventStaffId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

