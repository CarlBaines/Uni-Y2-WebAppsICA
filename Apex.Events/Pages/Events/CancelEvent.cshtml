@page
@model Apex.Events.Pages.Events.CancelEventModel

@{
    ViewData["Title"] = "CancelEvent";
}


<div class="center-container">
    <h1><b>Event - Cancel</b></h1>
    <h3>Are you sure you want to cancel this Event?</h3>
    <div class="alert alert-warning">
        <strong>Warning:</strong> Cancelling this event will:
        <ul>
            <li>Mark the event as cancelled</li>
            <li>Remove all staff assignments (@Model.AssignedStaffCount staff member(s))</li>
        </ul>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventDate)
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Model.VenueName
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Event.EventId" />
        <br />
        <input type="submit" value="Cancel Event" class="btn btn-warning" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
